PARMN=$#
PARMV=( $@ )
while [ `pidof mtx | wc -l` -gt 0 ]; do
	echo "mtx running..."
	sleep 1
done
case ${PARMV[1]} in 
	"/dev/sgx")
		if [ ${PARMV[2]}  == "status" ]; then
			mtx -f /dev/changer status | sed -e 's/VolumeTag=NS/VolumeTag=XX/g' -e 's/VolumeTag = NS/VolumeTag = XX/g'
		else
			PARMV[1]="/dev/changer"
			mtx ${PARMV[@]}
		fi
	;;
	*)
		
		mtx $@
	;;
esac
