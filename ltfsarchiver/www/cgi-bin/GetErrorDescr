. $CFGFILE

function get_parameter()
{
echo $PARM | tr '&' '\n' | grep "^$1=" | sed 's/.*=//' | sed 's/\\//'
}

function geterror()
{
response=( `$CMD_DB "SELECT status,errorcode,errordescription FROM requests WHERE uuid = '$taskid';" | head -1 | tr '|' ' '` )
if [ -z "$response" ]; then
	message="400\t$taskid doesn't exist"
else
	if [ ${response[0]} == "fallout" ]; then
		message="200\t${response[1]}\t"
		for ((midx=2; midx<${#response[@]}; midx++)) ]; do
			message=$message' '${response[$midx]}
		done
	else
		message="400\t$taskid is not in fallout status"
	fi
fi
}


function output_text
{
echo 'Content-Type: text/plain'
echo ''
echo -e $message
}

# Script starts here
PARM=$QUERY_STRING
taskid=$( get_parameter TaskID )
if [ -z $taskid ]; then
	#message="Empty TaskID supplied"
	message="400\tInvalid or empty ID"
else
	#	====================================
	#	Query DB, leggo info
	geterror
fi
output_text
