. $CFGFILE
. `dirname $0`/common.sh
function output_html
{
echo 'Content-Type: text/html'
echo ''
echo '<HTML><BODY bgcolor="#FFFFCC" link="#000099" vlink="#000099">'
echo '<font size="2" face="Verdana, Arial, Helvetica, sans-serif">'
echo '<CENTER>'
if [ ${#dataarray[@]} == 1 ]; then
	echo 'No tape found'
else
	echo '<FONT SIZE=+2>List tapes</FONT><CENTER><br><br>'
	echo '<TABLE border=1 cellpadding=5>'
	echo '<TR>'
	echo '<TD><b>Label</b></TD>'
	echo '<TD><b>Free MB</b></TD>'
	echo '<TD><b>Poolname</b></TD>'
	echo '<TD><b>LTOtype</b></TD>'
	echo '</TR>'
	DATA_IDX=0
	while [ $DATA_IDX -lt ${#dataarray[@]} ]; do
		echo '<TR>'
		echo '<TD>'${dataarray[$DATA_IDX]}'</TD>'
		echo '<TD>'${dataarray[$DATA_IDX+1]}'</TD>'
		echo '<TD>'${dataarray[$DATA_IDX+2]}'</TD>'
		echo '<TD>'${dataarray[$DATA_IDX+3]}'</TD>'
		echo '</TR>'
		let DATA_IDX+=4
	done
	echo '</TABLE></CENTER></BODY></HTML>'
fi
}

################################################################################
# Script starts here
PARM=$QUERY_STRING
pattern=$( get_parameter TapeID )
output=$( get_parameter Output )
poolname=$( get_parameter PoolName )
if [ -z $pattern ]; then
	if [ -z $poolname ]; then
		dataarray=( `$CMD_DB" select label,free,poolname,ltotype from lto_info order by poolname,label;" | tr -d ' ' | tr '|' ' ' | tr '\n' ' '` )
	else
		dataarray=( `$CMD_DB" select label,free,poolname,ltotype from lto_info where poolname='$poolname' order by label;" | tr -d ' ' | tr '|' ' ' | tr '\n' ' '` )
	fi
else
	ppattern='%'$pattern'%'
	if [ -z $poolname ]; then
		dataarray=( `$CMD_DB" select label,free,poolname,ltotype from lto_info where label like '$ppattern' order by poolname, label;" | tr -d ' ' | tr '|' ' ' | tr '\n' ' '` )
	else
		dataarray=( `$CMD_DB" select label,free,poolname,ltotype from lto_info where poolname='$poolname' and label like '$ppattern' order by poolname;" | tr -d ' ' | tr '|' ' ' | tr '\n' ' '` )
	fi
fi
case $output in
	"TEXT")
		if [  -z $dataarray ]; then
			message="400\tNo tape found matching criteria"
		else
			DATA_IDX=0
			message="200"
			while [ $DATA_IDX -lt ${#dataarray[@]} ]; do
				message=$message"\t(${dataarray[$DATA_IDX]},${dataarray[$DATA_IDX+1]},${dataarray[$DATA_IDX+2]},${dataarray[$DATA_IDX+3]})\t"
				let DATA_IDX+=4
			done
		fi
		output_text_common
	;;
	"JSON")
		if [  -z $dataarray ]; then
			message='{"exit_code":"400","message":"No tape found matching criteria"}'
		else
			message='{"exit_code":"200","output":['
			DATA_IDX=0
			LAST_IDX=0
			while [ $DATA_IDX -lt ${#dataarray[@]} ]; do
				let LAST_IDX+=4
				message=$message'{"TapeID":"'${dataarray[$DATA_IDX]}'","FreeSpace":"'${dataarray[$DATA_IDX+1]}'","PoolName":"'${dataarray[$DATA_IDX+2]}'","LTOtype":"'${dataarray[$DATA_IDX+3]}'"}'
				[ $LAST_IDX -lt ${#dataarray[@]} ] && message=$message','
				let DATA_IDX+=4
			done
			message=$message']}'
		fi
		output_json_common
	;;
	*)
		output_html
	;;
esac
